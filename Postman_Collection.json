          "name": "Verificar Estado de la API",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/health",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8000",
              "path": [
                "health"
              ]
            },
            "description": "Verificar que la API esté corriendo\n\nRespuesta esperada: 200 OK con {\"status\":\"ok\"}"
          },
          "response": []
        }
      ]
    },
